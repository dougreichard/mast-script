{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Story Run",
            "program": "${workspaceFolder}/nut-run.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Formatting",
            "program": "${workspaceFolder}/nut-format.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Simple Formatting",
            "program": "${workspaceFolder}/nut-format-simple.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "disableOptimisticBPs": true,
            "args": [
                "-i",
                "./test/"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Test Scopes",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "disableOptimisticBPs": true,
            "args": [
                "-i",
                "./test/nut-scopes-local.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}